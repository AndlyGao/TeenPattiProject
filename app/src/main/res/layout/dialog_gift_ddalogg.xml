<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_78sdp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/back_gift_layout"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/greybase" />

            <TextView
                android:id="@+id/txtGiftName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:padding="@dimen/_5sdp"
                android:text="Name"
                android:textColor="@color/w1"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back_gift_layout_rupee"
            android:drawableLeft="@drawable/red_chips_small"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:paddingLeft="@dimen/_5sdp"

            android:paddingRight="@dimen/_10sdp"

            android:text="sdkms"
            android:textColor="@color/w1"
            android:textSize="@dimen/_9sdp" />

    </RelativeLayout>

</RelativeLayout>