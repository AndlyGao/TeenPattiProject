<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_main" />

    <ImageView
        android:id="@+id/imgback1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_minus40sdp"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/splash_bc_1" />

    <ImageView
        android:id="@+id/imgback2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_minus40sdp"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/splash_bc_1" />

    <ImageView
        android:id="@+id/imgback3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/splash_bc_2" />


    <ImageView
        android:id="@+id/imgback4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/splash_bc_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_weight="0.5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ticon"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/logotrans"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tx1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:paddingEnd="10dp"
                    android:text="India's Best Teen Pati Platform"
                    android:textColor="#ffff"
                    app:layout_constraintBottom_toTopOf="@id/tx2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ticon"
                    app:layout_constraintTop_toTopOf="@id/ticon"></TextView>

                <TextView
                    android:id="@+id/tx2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:paddingEnd="10dp"
                    android:text="India's Best Teen Pati Platform"
                    android:textColor="#ffff"
                    app:layout_constraintBottom_toTopOf="@id/tx3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ticon"
                    app:layout_constraintTop_toBottomOf="@id/tx1"></TextView>

                <TextView
                    android:id="@+id/tx3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:paddingEnd="10dp"
                    android:text="India's Best Teen Pati Platform"
                    android:textColor="#ffff"
                    app:layout_constraintBottom_toBottomOf="@id/ticon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ticon"
                    app:layout_constraintTop_toBottomOf="@id/tx2"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_15sdp"
                    android:fontFamily="@font/bold"
                    android:gravity="bottom|center"
                    android:text="Welcome to Indi Parti Star"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_20sdp" />

                <EditText
                    android:id="@+id/edtLoginUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/ic_edittext"
                    android:drawableLeft="@drawable/login_user_icon"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/regu"
                    android:hint="Registered Phone no."
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/edittext_text"
                    android:textColorHint="@color/w3"
                    android:textSize="@dimen/_13sdp" />


                <EditText
                    android:id="@+id/edtLoginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_edittext"
                    android:drawableLeft="@drawable/login_lock_screen"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/regu"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/edittext_text"
                    android:textColorHint="@color/w3"
                    android:textSize="@dimen/_13sdp" />


                <EditText
                    android:id="@+id/edtLoginURL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_edittext"
                    android:drawableLeft="@drawable/login_lock_screen"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/regu"
                    android:hint="Enter Url"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/edittext_text"
                    android:textColorHint="@color/w3"
                    android:textSize="@dimen/_13sdp"
                    android:visibility="gone" />


                <!--        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/login_pg_button" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.skydoves.elasticviews.ElasticButton
                    android:id="@+id/btnLoginSubmit"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_other"
                    android:fontFamily="@font/bold"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="LOGIN"
                    android:textColor="@color/w2"
                    app:button_duration="300"
                    app:button_scale="0.8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/w1"
                        android:padding="10dp"
                        android:layout_alignEnd="@id/btnLoginSubmit"
                        android:text="Forgot Password">

                    </TextView>

                </RelativeLayout>


                <TextView
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Don't have account ?\nRegister Now"
                    android:textColor="@color/w2" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTableAmountTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtTableAmountTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>


    <com.skydoves.elasticviews.ElasticImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/cancel"
        android:visibility="gone"
        app:layout_duration="300"
        app:layout_scale="0.8" />

</RelativeLayout>
